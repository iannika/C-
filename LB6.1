class Human : IComparable<Human> {
	public string surname {get; set;}
	public DateTime old {get; set;}
	public string status {get; set;}

	public Human(string surname, DateTime old, string status){
		this.surname = surname;
		this.old = old;
		this.status = status;
	}
	
	public Human(){
		surname = "null";
		old = DateTime.Today;
		status = "null";
	}
	
	
      public override string ToString() 
        {   
		  int age = DateTime.Now.Year - this.old.Year;
            return string.Format("Surname: {0} Old: {1} Sratus: {2}\n", this.surname, age, this.status);
        }

        public int CompareTo(Human obj)
        {
            if (this.old > obj.old
                return 1;
            if (this.old < obj.old)
                return -1;
            else
                return 0;
        }
	

}
	
   class Student : Human {
	   public int math {get; set;}
	   public int physics {get; set;}
	   public int history {get; set;}
	   
	   public Student(string surname, DateTime old, string status, int math, int physics, int history) :
		base(surname, old, status)
		{
			this.math = math;
			this.physics = physics;
			this.history = history;
		}
	   
		public int mid
		{
			get { return (math + physics + history)/3; }
			set { mid = value; }
		}
	   
	    public override string ToString() 
        {   
		  int age = DateTime.Now.Year - this.old.Year;
          return string.Format("Surname: {0} Old: {1} Status: {2} Rating: {3}", this.surname, age, this.status, this.mid);
        }
	   
   }
